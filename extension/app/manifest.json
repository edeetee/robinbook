{
  "name": "Robinbook Setup",

  "description": "This extension guides and facilitates exporting your data for Robinbook, ",

  "manifest_version": 2,

  "version": "0.1",

  "content_scripts": [
    {
      "matches": ["file:///*/index.htm"],
      "js": ["archive.js"],
      "css": ["main.css"]
    },
    {
      "matches": ["file:///*.facebook.com/*/friends*"],
      "js": ["friends.js"],
      "css": ["main.css"]
    }
  ],

  "permissions": ["*://*.facebook.com/*", "storage", "downloads"],

  "content_security_policy": "default-src 'self'",

  "icons": {
    "38": "icon38.png"
  },

  "browser_action": {
    "default_icon": "icon38.png",
    "default_title": "Robinbook",
    "default_popup": "popup.html"
  }
}