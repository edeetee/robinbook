{
  "name": "Robinbook Setup",

  "description": "This extension guides and facilitates exporting your data for Robinbook, ",

  "manifest_version": 2,

  "version": "0.2",

  "content_scripts": [
    {
      "matches": ["file:///*"],
      "js": ["vendor.chunk.js", "archive.js"],
      "css": ["main.css"]
    },

    {
      "matches": ["*://*.facebook.com/*/friends*"],
      "js": ["vendor.chunk.js", "friends.js"],
      "css": ["main.css"]
    },

    {
      "matches": ["*://*.facebook.com/settings?tab=your_facebook_information"],
      "js": ["vendor.chunk.js", "openDyi.js"]
    },
    {
      "matches": ["*://*.facebook.com/dyi*"],
      "js": ["vendor.chunk.js", "archiveHelper.js"],
      "css": ["main.css"]
    }
  ],

  "permissions": ["storage", "activeTab", "tabs"],

  "content_security_policy": "default-src 'self'",

  "icons": {
    "38": "icon38.png"
  },

  "browser_action": {
    "default_icon": "icon38.png",
    "default_title": "Robinbook",
    "default_popup": "popup.html"
  }
}